# ====================================
# CONFIGURACIÓN DEL BACKEND
# Proyecto Universitario
# ====================================

# Base de Datos MySQL/MariaDB
DB_HOST=localhost
DB_PORT=3306
DB_NAME=saas_inventario
DB_USER=root
DB_PASSWORD=

# JWT (Autenticación)
JWT_SECRET=mi_secreto_super_seguro_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# Puerto del Servidor
PORT=3000

# Entorno
NODE_ENV=development

# CORS - URLs permitidas (separadas por coma)
# Agrega más IPs si trabajas con otros devs en la red
CORS_ORIGIN=http://localhost:5173,http://192.168.0.11:5173

# URL del Frontend (para emails, links, etc)
FRONTEND_URL=http://localhost:5173

# IP de la Red Local
# IMPORTANTE: Cámbiala a TU IP ejecutando: ipconfig (Windows) o ifconfig (Linux/Mac)
# Busca la IPv4 de tu adaptador WiFi o Ethernet
LOCAL_IP=192.168.0.11
